<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/navigation.ejs') %>

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">

        <!-- Page-header -->
        <div class="page-header">
          <div class="row align-items-end">
            <div class="col-lg-8">
              <div class="page-header-title">
                <div class="d-inline">
                  <h4>Payment Management</h4>
                  <span>Payments</span>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                  <li class="breadcrumb-item"><a href="/"> <i class="feather icon-home"></i> </a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-header end -->

        <div class="page-body">
          <div class="card">
            <div class="card-header">
                 <img src="/images/edit-icon.svg" alt="QRcode">
              <a href="/create-payment"><i class="feather icon-add"></i> Add Payment</a>
            </div>

            <div class="card-block">
              <div class="table-responsive dt-responsive">
                <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Booking</th>
                      <th>Transaction ID</th>
                      <th>Amount</th>
                      <th>Method</th>
                      <th>Status</th>
                      <th>Paid At</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(payments.length > 0) { %>
                      <% payments.forEach(p => { %>
                        <tr>
                          <td><%= p._id %></td>
                          <td><%= p.booking ? p.booking._id : 'N/A' %></td>
                          <td><%= p.transactionId %></td>
                          <td><%= p.amount %></td>
                          <td><%= p.method %></td>
                          <td><%= p.status %></td>
                          <td><%= p.paidAt ? p.paidAt.toISOString().slice(0,10) : '-' %></td>
                          <td>
                            <a href="/payment/edit/<%= p._id %>">
                              <img src="/images/edit-icon.svg" alt="Edit">
                            </a>
                          </td>
                          <td>
                            <button onclick="deletePayment(this)" class="btn-delete" data-paymentid="<%= p._id %>">
                              <img src="/images/delete.svg" alt="Delete">
                            </button>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="9" class="text-center">No payments found!</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
  async function deletePayment(btn) {
    const paymentId = btn.dataset.paymentid;
    const res = await fetch('/payment/' + paymentId, { method: 'DELETE' });
    if (res.ok) {
      location.reload();
    } else {
      alert('Failed to delete payment');
    }
  }
</script>

<%- include('../includes/end.ejs') %>
