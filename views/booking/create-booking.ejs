<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/navigation.ejs') %>

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">

        <!-- Page-header -->
        <div class="page-header">
          <div class="row align-items-end">
            <div class="col-lg-8">
              <div class="page-header-title">
                <div class="d-inline">
                  <h4><%= editing ? "Update Booking" : "Add Booking" %></h4>
                  <span>Manage room booking details</span>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                  <li class="breadcrumb-item"><a href="/"> <i class="feather icon-home"></i> </a></li>
                  <li class="breadcrumb-item"><a href="/bookings">Bookings</a></li>
                  <li class="breadcrumb-item"><a href="#"><%= editing ? "Update Booking" : "Add Booking" %></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-header end -->

        <div class="page-body">
          <div class="row">
            <div class="col-sm-12">
              <div class="card">
                <div class="card-header">
                  <h5>Booking Form</h5>
                </div>
                <div class="card">
                  <div class="card-block">
                    <div class="j-wrapper j-wrapper-940">

                      <form action="<%= editing ? '/booking/edit/' + oldInput.id : '/booking' %>" 
                            method="POST" 
                            class="j-pro" 
                            novalidate="">

                        <div class="j-content">

                          <!-- User -->
                          <div class="j-unit">
                            <label for="user">User</label>
                            <select id="user" name="user" required>
                              <option value="">Select User</option>
                              <% users.forEach(u => { %>
                                <option value="<%= u._id %>" <%= oldInput.user == u._id ? 'selected' : '' %>>
                                  <%= u.name %> - <%= u.email %>
                                </option>
                              <% }) %>
                            </select>
                          </div>

                          <!-- Room -->
                          <div class="j-unit">
                            <label for="room">Room</label>
                            <select id="room" name="room" required>
                              <option value="">Select Room</option>
                              <% rooms.forEach(r => { %>
                                <option value="<%= r._id %>" <%= oldInput.room == r._id ? 'selected' : '' %>>
                                  Room <%= r.roomNumber %> - <%= r.hotelName %> 
                                </option>
                              <% }) %>
                            </select>
                          </div>

                          <!-- Check-in Date -->
                          <div class="j-unit">
                            <label for="checkInDate">Check-in Date</label>
                            <input type="date" id="checkInDate" name="checkInDate" 
                                   value="<%= oldInput.checkInDate ? oldInput.checkInDate.toISOString().split('T')[0] : '' %>">
                          </div>

                          <!-- Check-out Date -->
                          <div class="j-unit">
                            <label for="checkOutDate">Check-out Date</label>
                            <input type="date" id="checkOutDate" name="checkOutDate" 
                                   value="<%= oldInput.checkOutDate ? oldInput.checkOutDate.toISOString().split('T')[0] : '' %>">
                          </div>

                          <!-- Guests -->
                          <div class="j-unit">
                            <label for="guests">Guests</label>
                            <input type="number" id="guests" name="guests" min="1" 
                                   value="<%= oldInput.guests %>">
                          </div>

                          <!-- Special Requests -->
                          <div class="j-unit">
                            <label for="specialRequests">Special Requests</label>
                            <textarea id="specialRequests" name="specialRequests" 
                                      placeholder="Any special requests?"><%= oldInput.specialRequests %></textarea>
                          </div>

                          <!-- Payment Status -->
                          <div class="j-unit">
                            <label for="paymentStatus">Payment Status</label>
                            <select name="paymentStatus" id="paymentStatus">
                              <option value="pending" <%= oldInput.paymentStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                              <option value="paid" <%= oldInput.paymentStatus === 'paid' ? 'selected' : '' %>>Paid</option>
                              <option value="failed" <%= oldInput.paymentStatus === 'failed' ? 'selected' : '' %>>Failed</option>
                            </select>
                          </div>

                          <!-- Booking Status -->
                          <div class="j-unit">
                            <label for="bookingStatus">Booking Status</label>
                            <select name="bookingStatus" id="bookingStatus">
                              <option value="confirmed" <%= oldInput.bookingStatus === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                              <option value="cancelled" <%= oldInput.bookingStatus === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                              <option value="completed" <%= oldInput.bookingStatus === 'completed' ? 'selected' : '' %>>Completed</option>
                            </select>
                          </div>

                          <!-- Total Amount -->
                          <div class="j-unit">
                            <label for="totalAmount">Total Amount</label>
                            <input type="number" id="totalAmount" name="totalAmount" step="0.01" 
                                   value="<%= oldInput.totalAmount %>">
                          </div>

                          <% if(editing) { %>
                            <input type="hidden" name="bookingId" value="<%= oldInput.id %>">
                          <% } %>

                        </div>

                        <div class="j-footer">
                          <button type="submit" class="btn btn-primary">Save</button>
                          <button type="reset" class="btn btn-default m-r-20">Reset</button>
                        </div>

                      </form>

                    </div>
                  </div>
                </div>
              </div>
              <!-- Booking form end -->
            </div>
          </div>
        </div>
        <!-- Page body end -->

      </div>
    </div>
  </div>
</div>

<%- include('../includes/end.ejs') %>
