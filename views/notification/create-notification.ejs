<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/navigation.ejs') %>

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">

        <!-- Page-header -->
        <div class="page-header">
          <div class="row align-items-end">
            <div class="col-lg-8">
              <div class="page-header-title">
                <div class="d-inline">
                  <h4><%= editing ? "Update Notification" : "Add Notification" %></h4>
                  <span>Send notifications to users</span>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                  <li class="breadcrumb-item"><a href="/"> <i class="feather icon-home"></i> </a></li>
                  <li class="breadcrumb-item"><a href="/notifications">Notifications</a></li>
                  <li class="breadcrumb-item"><a href="#"><%= editing ? "Update Notification" : "Add Notification" %></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-header end -->

        <div class="page-body">
          <div class="row">
            <div class="col-sm-12">
              <div class="card">
                <div class="card-header">
                  <h5>Notification Form</h5>
                </div>
                <div class="card-block">
                  <div class="j-wrapper j-wrapper-940">

                    <form action="<%= editing ? '/notification/edit/' + oldInput.id : '/notification' %>" method="POST" class="j-pro">

                      <div class="j-content">

                        <!-- User -->
                        <div class="j-row">
                          <div class="j-span12 j-unit">
                            <label class="j-input j-select">
                              <select name="user" required>
                                <option value="">Select User</option>
                                <% users.forEach(u => { %>
                                  <option value="<%= u._id %>" <%= oldInput.user == u._id ? 'selected' : '' %>><%= u.name %></option>
                                <% }) %>
                              </select>
                            </label>
                          </div>
                        </div>

                        <!-- Type -->
                        <div class="j-row">
                          <div class="j-span6 j-unit">
                            <label class="j-input j-select">
                              <select name="type" required>
                                <option value="">Select Type</option>
                                <option value="email" <%= oldInput.type == 'email' ? 'selected' : '' %>>Email</option>
                                <option value="sms" <%= oldInput.type == 'sms' ? 'selected' : '' %>>SMS</option>
                              </select>
                            </label>
                          </div>

                          <!-- Status -->
                          <div class="j-span6 j-unit">
                            <label class="j-input j-select">
                              <select name="status" required>
                                <option value="pending" <%= oldInput.status == 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="sent" <%= oldInput.status == 'sent' ? 'selected' : '' %>>Sent</option>
                                <option value="failed" <%= oldInput.status == 'failed' ? 'selected' : '' %>>Failed</option>
                              </select>
                            </label>
                          </div>
                        </div>

                        <!-- Message -->
                        <div class="j-row">
                          <div class="j-span12 j-unit">
                            <div class="j-input">
                              <textarea name="message" placeholder="Notification message" required><%= oldInput.message %></textarea>
                            </div>
                          </div>
                        </div>

                        <% if(editing) { %>
                          <input type="hidden" name="notificationId" value="<%= oldInput.id %>">
                        <% } %>

                      </div>

                      <div class="j-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-default m-r-20">Reset</button>
                      </div>

                    </form>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Page body end -->

      </div>
    </div>
  </div>
</div>

<%- include('../includes/end.ejs') %>
