<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/navigation.ejs') %>

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">

        <!-- Page-header -->
        <div class="page-header">
          <div class="row align-items-end">
            <div class="col-lg-8">
              <div class="page-header-title">
                <div class="d-inline">
                  <h4>Booking Management</h4>
                  <span>Bookings</span>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                  <li class="breadcrumb-item"><a href="/"> <i class="feather icon-home"></i> </a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-header end -->

        <!-- Page-body -->
        <div class="page-body">
          <div class="card">
            <div class="card-header">
             <img src="/images/edit-icon.svg" alt="QRcode">
              <a href="/create-booking"><i class="feather icon-add"></i> Add Booking</a>
            </div>

            <div class="card-block">
              <div class="table-responsive dt-responsive">
                <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>User</th>
                      <th>Room</th>
                      <th>Check-in</th>
                      <th>Check-out</th>
                      <th>Guests</th>
                      <th>Total Amount</th>
                      <th>Payment</th>
                      <th>Status</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(bookings.length > 0) { %>
                      <% bookings.forEach(b => { %>
                        <tr>
                          <td><%= b._id %></td>
                          <td><%= b.user ? b.user.name : 'N/A' %></td>
                          <td><%= b.room ? b.room.roomNumber + ' - ' + b.room.hotelName : 'N/A' %></td>
                          <td><%= b.checkInDate.toDateString() %></td>
                          <td><%= b.checkOutDate.toDateString() %></td>
                          <td><%= b.guests %></td>
                          <td><%= b.totalAmount %></td>
                          <td><%= b.paymentStatus %></td>
                          <td><%= b.bookingStatus %></td>
                          <td>
                            <a href="/booking/edit/<%= b._id %>">
                              <img src="/images/edit-icon.svg" alt="Edit">
                            </a>
                          </td>
                          <td>
                            <button onclick="deleteBooking(this)" class="btn-delete" data-bookingid="<%= b._id %>">
                              <img src="/images/delete.svg" alt="Delete">
                            </button>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="11" class="text-center">No bookings found!</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-body end -->

      </div>
    </div>
  </div>
</div>

<script>
  async function deleteBooking(btn) {
    const bookingId = btn.dataset.bookingid;
    const res = await fetch('/booking/' + bookingId, { method: 'DELETE' });
    if (res.ok) {
      location.reload();
    } else {
      alert('Failed to delete booking');
    }
  }
</script>

<%- include('../includes/end.ejs') %>
