<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/navigation.ejs') %>

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
      <div class="page-wrapper">
        <!-- Page-header start -->
        <div class="page-header">
          <div class="row align-items-end">
            <div class="col-lg-8">
              <div class="page-header-title">
                <div class="d-inline">
                  <h4>User Management</h4>
                  <span>Users</span>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                  <li class="breadcrumb-item">
                    <a href="/"> <i class="feather icon-home"></i> </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-header end -->

        <!-- Page-body start -->
        <div class="page-body">
          <!-- DOM/Jquery table start -->
          <div class="card">
            <% if(isSuperAdmin){ %>
            <div class="card-header">
              <img src="/images/edit-icon.svg" alt="QRcode">
              <a href="/create-user"><i class="feather icon-add"></i> Add User</a>
            </div>
            <% } %>

            <div class="card-block">
              <div class="table-responsive dt-responsive">
                <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Username</th>
                      <th>Email</th>
                      <th>User Type</th>
                      <th>Edit</th>
                      <% if(isSuperAdmin){ %>
                      <th>Delete</th>
                      <% } %>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(users.length > 0) { %>
                      <% users.forEach(u => { %>
                        <tr>
                          <td><%= u.id %></td>
                          <td><%= u.name %></td>
                          <td><%= u.email %></td>
                          <td>
                            <% 
                              switch(u.user_type) {
                                case 'super_admin': %>Super Admin<% break;
                                case 'admin': %>Admin<% break;
                                case 'juristic': %>Juristic<% break;
                                case 'building_owner': %>Building Owner<% break;
                                case 'merchant': %>Merchant<% break;
                                default: %>User<% 
                              } 
                            %>
                          </td>
                  
                          <td>
                          <a href="/user/edit/<%= u.id %>">
                            <img src="/images/edit-icon.svg" alt="Edit">
                            <span>Edit</span>
                          </a>
                        </td>
                          <% if(isSuperAdmin){ %>
                          <td>
                            <button onclick="deleteUser(this)" class="btn-delete" data-userid="<%= u.id %>">
                              <img src="/images/delete.svg" alt="Delete">
                              <span>Delete</span>
                            </button>
                          </td>
                          <% } %>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="6" class="text-center">No users found!</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- DOM/Jquery table end -->
        </div>
        <!-- Page-body end -->
      </div>
    </div>
    <!-- Main-body end -->
  </div>
</div>

<%- include('../includes/end.ejs') %>
