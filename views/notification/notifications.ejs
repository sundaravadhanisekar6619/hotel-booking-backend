<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/navigation.ejs') %>

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">

        <!-- Page-header -->
        <div class="page-header">
          <div class="row align-items-end">
            <div class="col-lg-8">
              <div class="page-header-title">
                <div class="d-inline">
                  <h4>Notification Management</h4>
                  <span>Notifications</span>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                  <li class="breadcrumb-item"><a href="/"> <i class="feather icon-home"></i> </a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-header end -->

        <!-- Page-body -->
        <div class="page-body">
          <div class="card">
            <div class="card-header">
            <img src="/images/edit-icon.svg" alt="QRcode">
              <a href="/create-notification"><i class="feather icon-add"></i> Add Notification</a>
            </div>

            <div class="card-block">
              <div class="table-responsive dt-responsive">
                <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>User</th>
                      <th>Type</th>
                      <th>Message</th>
                      <th>Status</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(notifications.length > 0) { %>
                      <% notifications.forEach(n => { %>
                        <tr>
                          <td><%= n._id %></td>
                          <td><%= n.user ? n.user.name : 'N/A' %></td>
                          <td><%= n.type %></td>
                          <td><%= n.message %></td>
                          <td><%= n.status %></td>
                          <td>
                            <a href="/notification/edit/<%= n._id %>">
                              <img src="/images/edit-icon.svg" alt="Edit">
                            </a>
                          </td>
                          <td>
                            <button onclick="deleteNotification(this)" class="btn-delete" data-id="<%= n._id %>">
                              <img src="/images/delete.svg" alt="Delete">
                            </button>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="7" class="text-center">No notifications found!</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-body end -->

      </div>
    </div>
  </div>
</div>

<script>
  async function deleteNotification(btn) {
    const id = btn.dataset.id;
    const res = await fetch('/notification/' + id, { method: 'DELETE' });
    if (res.ok) location.reload();
    else alert('Failed to delete notification');
  }
</script>

<%- include('../includes/end.ejs') %>
