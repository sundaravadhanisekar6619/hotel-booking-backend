<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/navigation.ejs') %>

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">

        <!-- Page-header -->
        <div class="page-header">
          <div class="row align-items-end">
            <div class="col-lg-8">
              <div class="page-header-title">
                <div class="d-inline">
                  <h4>Review Management</h4>
                  <span>Reviews</span>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                  <li class="breadcrumb-item"><a href="/"> <i class="feather icon-home"></i> </a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-header end -->

        <!-- Page-body -->
        <div class="page-body">
          <div class="card">
            <div class="card-header">
                 <img src="/images/edit-icon.svg" alt="QRcode">
              <a href="/create-review"><i class="feather icon-add"></i> Add Review</a>
            </div>

            <div class="card-block">
              <div class="table-responsive dt-responsive">
                <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>User</th>
                      <th>Room</th>
                      <th>Rating</th>
                      <th>Comment</th>
                      <th>Approved</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(reviews.length > 0) { %>
                      <% reviews.forEach(r => { %>
                        <tr>
                          <td><%= r._id %></td>
                          <td><%= r.user ? r.user.name : 'N/A' %></td>
                          <td><%= r.room ? r.room.roomNumber + ' - ' + r.room.hotelName : 'N/A' %></td>
                          <td><%= r.rating %></td>
                          <td><%= r.comment || '-' %></td>
                          <td><%= r.approved ? 'Yes' : 'No' %></td>
                          <td>
                            <a href="/review/edit/<%= r._id %>">
                              <img src="/images/edit-icon.svg" alt="Edit">
                            </a>
                          </td>
                          <td>
                            <button onclick="deleteReview(this)" class="btn-delete" data-reviewid="<%= r._id %>">
                              <img src="/images/delete.svg" alt="Delete">
                            </button>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="8" class="text-center">No reviews found!</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- Page-body end -->

      </div>
    </div>
  </div>
</div>

<script>
  async function deleteReview(btn) {
    const reviewId = btn.dataset.reviewid;
    const res = await fetch('/review/' + reviewId, { method: 'DELETE' });
    if (res.ok) {
      location.reload();
    } else {
      alert('Failed to delete review');
    }
  }
</script>

<%- include('../includes/end.ejs') %>
